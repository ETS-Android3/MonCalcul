                android:layout_weight="1"
                android:background="@drawable/cercle"
                android:onClick="eightBTN"
                android:text="@string/eight"
                android:textColor="#FFFFFF"
                app:backgroundTint="#9C27B0" />

            <Button
                android:id="@+id/nineBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cercle"
                android:onClick="nineBTN"
                android:text="@string/nine"
                android:textColor="#FFFFFF"
                app:backgroundTint="#9C27B0" />

            <Button
                android:id="@+id/multupBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cercle"
                android:onClick="multipBTN"
                android:text="@string/multupl"
                android:textColor="#FFFFFF"
                app:backgroundTint="#06A3B8" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/foreBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
