        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/plusminBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cercle"
                android:onClick="plusminBTN"
                android:text="@string/plusminus"
                android:textColor="#FFFFFF"
                app:backgroundTint="#06A3B8" />

            <Button
                android:id="@+id/zeroBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cercle"
                android:onClick="zeroBTN"
                android:text="@string/zero"
                android:textColor="#FFFFFF"
                app:backgroundTint="#9C27B0" />

            <Button
                android:id="@+id/pointBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cercle"
                android:onClick="pointBTN"
                android:text="@string/point"
                android:textColor="#FFFFFF"
                app:backgroundTint="#06A3B8" />

            <Button
                android:id="@+id/equalBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cercle"
                android:onClick="equalBTN"
                android:text="@string/equal"
                android:textColor="#FFFFFF"
                app:backgroundTint="#4CAF50" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146"
        android:autofillHints="false"
        android:inputType="none"
        android:textSize="36sp"
        android:textAlignment="textEnd"
        android:gravity="end"
        tools:ignore="LabelFor"/>

    <ImageButton
        android:id="@+id/button22"

        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/cercle"
        android:contentDescription="TODO"
        android:onClick="backspaceBTN"
        android:text="@string/cancel"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/backspace" />

</androidx.constraintlayout.widget.ConstraintLayout>