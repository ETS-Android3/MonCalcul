                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cercle"
                android:onClick="clearBTN"
                android:text="@string/clear"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:backgroundTint="#FF5722"
                app:srcCompat="@drawable/backspace" />

            <Button
                android:id="@+id/parentheseBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"


                android:layout_weight="1"

                android:background="@drawable/cercle"
                android:onClick="parentheseBTN"
                android:text="@string/parenthese"
                android:textColor="#FFFFFF"
                app:backgroundTint="#06A3B8" />

            <Button
                android:id="@+id/expoBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cercle"
                android:onClick="expoBTN"
                android:text="@string/exponent"
                android:textColor="#FFFFFF"
                app:backgroundTint="#06A3B8" />

            <Button
                android:id="@+id/divBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cercle"
                android:onClick="deviseBTN"
                android:text="@string/devise"
                android:textColor="#FFFFFF"
                app:backgroundTint="#06A3B8" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/severnBTN"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/cercle"
